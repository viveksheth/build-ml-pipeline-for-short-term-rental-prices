name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifect:
        description: Input csv data to be cleaned
        type: string

      output_artifect:
        description: Cleaned csv data to save
        type: string

      output_description:
        description: Output artifact description 
        type: string

      min_price:
        description: Minimum price boundarie for outlier removal
        type: string

      max_price:
        description: Maximum price boundarie for outlier removal
        type: string      


    command: >-
        python run.py  --input_artifect {input_artifect} --output_artifect {output_artifect} --output_description {output_description} --min_price {min_price} --max_price {max_price}
